{
  "name": "dmr-server",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/dmr-server/src",
  "projectType": "application",
  "tags": [],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "webpack-cli build",
        "args": ["node-env=production"]
      },
      "configurations": {
        "development": {
          "args": ["node-env=development"]
        }
      }
    },
    "serve": {
      "continuous": true,
      "executor": "@nx/js:node",
      "defaultConfiguration": "development",
      "dependsOn": ["build"],
      "options": {
        "buildTarget": "dmr-server:build",
        "runBuildTargetDependencies": false
      },
      "configurations": {
        "development": {
          "buildTarget": "dmr-server:build:development"
        },
        "production": {
          "buildTarget": "dmr-server:build:production"
        }
      }
    },
    "test": {
      "executor": "@nx/vite:test",
      "outputs": ["{workspaceRoot}/coverage/apps/dmr-server"],
      "options": {
        "passWithNoTests": true,
        "reportsDirectory": "../../coverage/apps/dmr-server",
        "config": "apps/dmr-server/vitest.config.ts"
      }
    },
    "e2e": {
      "executor": "@nx/vite:test",
      "outputs": ["{workspaceRoot}/coverage/apps/dmr-server-e2e"],
      "options": {
        "passWithNoTests": true,
        "reportsDirectory": "../../coverage/apps/dmr-server-e2e",
        "config": "apps/dmr-server/vitest.config.e2e.mts"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/dmr-server/**/*.ts"]
      }
    }
  }
}
